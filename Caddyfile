{
    # Global options
    auto_https off
    admin off
}

{$BASE_DOMAIN:themina.local} {
    # Trust X-Forwarded-* headers from load balancer
    # This is important when Caddy is behind a reverse proxy/load balancer
    
    # API routes - forward to backend (strip /api prefix)
    handle /api* {
        uri strip_prefix /api
        reverse_proxy gr_web:80 {
            header_up X-Forwarded-Proto {http.request.header.X-Forwarded-Proto}
            header_up X-Forwarded-For {http.request.header.X-Forwarded-For}
        }
    }
    
    # Admin dashboard routes - forward to admin frontend (keep /dashboard prefix)
    handle /dashboard* {
        reverse_proxy admin-frontend:4000 {
            header_up X-Forwarded-Proto {http.request.header.X-Forwarded-Proto}
            header_up X-Forwarded-For {http.request.header.X-Forwarded-For}
        }
    }
    
    # Default route - forward to core frontend
    handle {
        reverse_proxy core-frontend:3000 {
            header_up X-Forwarded-Proto {http.request.header.X-Forwarded-Proto}
            header_up X-Forwarded-For {http.request.header.X-Forwarded-For}
        }
    }
    
    # Logging for debugging
    log {
        output stdout
        format json
        level INFO
    }
}


